<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crud Nodejs</title>
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> -->
  <link rel="stylesheet" href="/bootstrap.css">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head> 
<body>
  <div class="container">
    <h2><%= title %></h2>
    <a href="/add" class="btn btn-sm btn-success">+ Add Users</a><br><br/>
    <table class=" table table-sm table-hover">
      <thead class="thead-dark">
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone No.</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% no = 1;%>
        <% users.forEach(function(user){ %>
        <tr>
          <td><%= no %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone_no %></td>
          <td>
            <a href="edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a>
            <!-- <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a> -->
            <button onclick='confirmDelete("<%= user.id %>")' class="btn btn-sm btn-danger">Delete</button>
          </td>
        </tr>
        <% no++ }); %>
      </tbody>
    </table>
  </div>
<script>
  function confirmDelete(userId){
    var result = confirm("Want to delete?");
    if (result) {
      window.location.replace(`http://localhost:3000/delete/${userId}`);
    }
  }
</script>
</body>
</html>